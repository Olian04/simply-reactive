{
  "compilerOptions": {
    "target": "es6",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "dist/",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts"
  ]
}
